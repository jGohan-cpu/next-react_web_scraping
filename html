<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Aviso de Baja de Precio</title>
</head>
<body>
    <h1>¡Aviso de Baja de Precio!</h1>
    <p>El precio del producto ha degradado. ¡No te pierdas la oportunidad!</p>

    <div id="productPrice">
        Precio anterior: $100
    </div>

    <button onclick="verificarPrecio()">Verificar Precio</button>

    <script>
        function verificarPrecio() {
            // Simulación de la verificación del precio
            const precioActual = 80; // Precio actual del producto

            // Comparar con el precio anterior
            const precioAnterior = 100; // Precio anterior del producto

            if (precioActual < precioAnterior) {
                // Mostrar mensaje de aviso
                alert('¡El precio ha degradado! ¡Aprovecha la oportunidad!');
            } else {
                alert('El precio se mantiene igual o ha aumentado.');
            }
        }
    </script>
</body>
</html>
